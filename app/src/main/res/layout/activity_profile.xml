<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">


    <ImageView
        android:id="@+id/burgerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/ic_baseline_menu_24"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/nom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/burgerButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="@string/usernameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintBottom_toTopOf="@id/userInfo"/>



    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@string/villeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/villeTextView"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/villeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/villeValue"
                android:layout_weight="2"
                android:textSize="13dp"/>

            <Button
                android:id="@+id/modifierProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier Profile"
                android:textSize="8dp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailTextView"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/emailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="-8dp"
                android:text="@string/emailValue"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/telephoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/telephoneTextView"
                android:textSize="13dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/telephoneValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telephoneValue"
                android:layout_marginStart="8dp"
                android:layout_weight="2"
                android:textSize="13dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bioTextView"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/bioValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bioValue"
                android:layout_weight="2"
                android:layout_marginStart="8dp"
                android:textSize="13dp"/>

        </LinearLayout>


    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfo"
        app:layout_constraintVertical_bias="0.033" />

    <LinearLayout
        android:id="@+id/annoncesBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/mesAnnoncesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mesAnnonacesTextView"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ajouterAnnoncesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajouterAnnoncesText"
            android:textSize="8dp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/annoncesBanner"
        app:layout_constraintVertical_bias="0.546"
        android:scrollbarAlwaysDrawVerticalTrack="true">
    </ListView>
    <LinearLayout
        android:id="@+id/bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

